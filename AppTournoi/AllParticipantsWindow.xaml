<Window x:Class="AppTournoi.AllParticipantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTournoi"
        mc:Ignorable="d"
        Title="AllParticipantsWindow" Height="450" Width="800" Background="#C2D9E2">
    
    <Grid Background="#C2D9E2" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Tableau des participants -->
        <DataGrid Grid.Column="0" AutoGenerateColumns="False" CanUserAddRows="False"
                  HeadersVisibility="Column" IsReadOnly="True" Margin="10" Name="DataGridParticipants" Height="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="auto" x:Name="ColumnId"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="auto" x:Name="ColumnNom"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}" Width="auto" x:Name="ColumnPrenom"/>
                <DataGridTemplateColumn Header="Photo" Width="auto" x:Name="ColumnPhoto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Photo}" Width="80" Height="80" Stretch="UniformToFill"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Sexe" Binding="{Binding Sexe}" Width="auto" x:Name="ColumnSexe"/>
                <DataGridTextColumn Header="Date de naissance" Binding="{Binding DateNaissance}" Width="auto" x:Name="ColumnDN"/>
                <DataGridTextColumn Header="Id Tournoi" Binding="{Binding IdTournoi}" Width="auto" x:Name="ColumnIdTournoi"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Recherche participant -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Nom du participant" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <TextBox Width="150" Height="25" Background="#A5C1C8" Name="TextBoxNomParticipant" TextChanged="TextBoxNomParticipant_TextChanged"/>
        </StackPanel>
    </Grid>
</Window>
