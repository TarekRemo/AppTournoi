<Window x:Class="AppTournoi.GestionParticipantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTournoi"
        mc:Ignorable="d"
        Title="GestionParticipantsWindow" Height="650" Width="800" Background="LightBlue">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <!-- Colonne pour la liste des participants -->
            <ColumnDefinition Width="3*" />
            <!-- Colonne pour le formulaire -->
        </Grid.ColumnDefinitions>

        <!-- Liste des participants -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Liste des participants" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <ListBox x:Name="ListBoxParticipants" Height="300"/>
        </StackPanel>

        <!-- Formulaire d'ajout à droite -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Nom" FontWeight="Bold"/>
            <TextBox x:Name="TextBoxNom" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Prénom" FontWeight="Bold"/>
            <TextBox x:Name="TextBoxPrenom" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Sex" FontWeight="Bold"/>
            <ComboBox x:Name="ComboBoxSex" Width="200" Margin="0,5,0,10">
                <TextBlock>feminin</TextBlock>
                <TextBlock>masculin</TextBlock>
            </ComboBox>

            <TextBlock Text="Date de Naissance" FontWeight="Bold"/>
            <DatePicker x:Name="DatePickerNaissance" Width="200" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,10">
                <Image Name="ImageUtilisateur" Source="Images/IconeUtilisateurs.ico" Height="60" Width="60" Margin="10"/>
                <Button Content="Choisir une photo" Width="120" Height="60" Name="ButtonChoisirPhoto" Click="ButtonChoisirPhoto_Click"/>
            </StackPanel>

            <TextBlock Text="Choisir un tournoi" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox x:Name="ListBoxTournois" Height="100" Width="300"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Enregistrer" Width="100" Name="ButtonEnregistrer" Click="ButtonEnregistrer_Click"/>
                <Button Content="Annuler" Width="100" Margin="10,0,0,0" Name="ButtonAnnuler" Click="ButtonAnnuler_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
