<Window x:Class="AppTournoi.ModifierSportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTournoi"
        mc:Ignorable="d"
        Title="ModifierSportWindow" Height="450" Width="800" Background="LightBlue">
    <Grid>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Ajouter un Sport" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Intitulé du Sport" FontWeight="Bold"/>
            <TextBox x:Name="TextBoxIntitule" Width="200" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Ajouter" Width="100" Name="ButtonAjouter" Click="ButtonAjouter_Click" />
                <Button Content="Annuler" Width="100" Margin="10,0,0,0" Name="ButtonAnnuler" Click="ButtonAnnuler_Click" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
