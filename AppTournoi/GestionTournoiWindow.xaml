<Window x:Class="AppTournoi.GestionTournoiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTournoi"
        mc:Ignorable="d"
        Title="GestionTournoiWindow" Height="400" Width="800" Background="LightBlue">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Liste des tournois -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Liste des tournois" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <ListBox x:Name="ListBoxTournois" Height="250">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Modifier" Click="ModifierMenuItem_Click"/>
                        <MenuItem Header="Supprimer" Click="SupprimerMenuItem_Click"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox> 
        </StackPanel>

        <!-- Formulaire de gestion des tournois -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Ajouter un tournoi" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Intitulé du tournoi" FontWeight="Bold"/>
            <TextBox x:Name="TextBoxIntitule" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Date du tournoi" FontWeight="Bold"/>
            <DatePicker x:Name="DatePickerTournoi" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Sport associé" FontWeight="Bold"/>
            <ComboBox x:Name="ComboBoxSports" Width="200" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Ajouter" Width="100" Click="Button_Enregistrer_Click" />
                <Button Content="Annuler" Width="100" Margin="10,0,0,0" Click="Button_Annuler_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
